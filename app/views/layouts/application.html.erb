<!DOCTYPE html>
<html>
<head>
  <title>CurdCrawl</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">CurdCrawl</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li><%= link_to "All Restaurants", restaurants_path %></li>
          <% if current_user.try(:admin?) %>
            <li>
              <%= link_to "Admin Dashboard", admin_dash_path %>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if !user_signed_in? %>
            <li><%= link_to new_user_registration_path do %><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <% end %>
          <% end %>
          <% if !user_signed_in? %>
            <li><%= link_to new_user_session_path do %><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <% end %>
          <% end %>
          <% if user_signed_in? %>
            <li><%= link_to destroy_user_session_path do %>
              Log Out
              <span class="glyphicon glyphicon-log-out"></span>
            <% end %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>


  <% if notice %>
  <p class="notice col-centered"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert col-centered"><%= alert %></p>
  <% end %>
  <%= yield %>
</body>
</html>
